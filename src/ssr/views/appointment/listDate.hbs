<main id="main">
    <div class="container p-4">
        <div class="row">
            <div class="col-md-10  mx-auto">
                <div class="col-12 text-center">
                    <h1>Buscar cita por fecha de cita</h1>
                </div>
                <div class="card text-white card-color mb-3 col-6 mx-auto">
                    <div class="card-body">
                        <form class="row g-3" action="/api/appointment/list/date" method="post">
