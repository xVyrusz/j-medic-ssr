                            <div class="col-12">
                                <input type="datetime-local" class="form-control"  id="date"name="date" required>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-success" type="submit">Buscar</button>
                                <a class="btn btn-danger ms-2" href="/api/appointment/list">Regresar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>