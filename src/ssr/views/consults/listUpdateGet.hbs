<main id="main">
  <div class="container p-4">
    <div class="row">
      <div class="col-md-10 mx-auto">
        <div class="col-12 text-center">
          <h1>Actualizar consulta</h1>
        </div>
        <div class="card text-white card-color mb-1">
          <div class="card-body">
            <form class="row g-3" action="/api/consults/update" method="post">
              <input
                type="hidden"
                class="form-control"
                name="id"
                value="{{consult.id}}"
              />
              <div class="col-sm-12 col-md-6 col-lg-4">
                <label class="form-label">Id de doctor</label>
                <input
                  type="number"
                  class="form-control"
                  name="idDoctor"
                  value="{{consult.idDoctor}}"
                />
              </div>
              <div class="col-sm-12 col-md-6 col-lg-4">
                <label class="form-label">Id de paciente</label>
                <input
                  type="number"
                  class="form-control"
                  name="idPatient"
                  value="{{consult.idPatient}}"
                />
              </div>
              <div class="col-sm-12 col-md-6 col-lg-4">
                <label class="form-label">Fecha de visita</label>
                <input
                  type="text"
                  class="form-control"
                  id="dateVisit"
                  name="dateVisit"
                  value="{{consult.dateVisit}}"
                />
              </div>
              <div class="col-sm-12 col-md-6 col-lg-4">
                <label class="form-label">Motivo de consulta</label>
                <input
                  type="text"
                  class="form-control"
                  name="nameReason"
                  value="{{consult.nameReason}}"
                />
              </div>
              <div class="col-sm-12 col-md-6 col-lg-4">
                <label class="form-label">Pruebas realizadas</label>
                <textarea
                  type="textarea"
                  class="form-control"
                  name="testMade"
                  rows="1"
                  value="{{consult.testMade}}"
                >{{consult.testMade}}</textarea>
              </div>
              <div class="col-sm-12 col-md-6 col-lg-4">
                <label class="form-label">Diagnostico</label>
                <textarea
                  type="textarea"
                  class="form-control"
                  name="diagnosis"
                  rows="1"
                  value="{{consult.diagnosis}}"
                >{{consult.diagnosis}}</textarea>
              </div>
              <div class="col-sm-12 col-md-6 col-lg-4">
                <label class="form-label">Tratamiento</label>
                <textarea
                  type="text"
                  class="form-control"
                  name="treatment"
                  rows="1"
                  value="{{consult.treatment}}"
                >{{consult.treatment}}</textarea>
              </div>
              <div class="col-12">
                <button
                  class="btn btn-success"
                  type="submit"
                >Actualizar</button>
                <a class="btn btn-danger ms-4" href="/api/consults">Regresar</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>